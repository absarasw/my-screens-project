{
  "project": "My Screen Project",
  "liveHost": "sample-screens-project.aem-screens.com",
  "previewHost": "main--my-screens-project--absarasw.hlx.page",
  "plugins": [
    {
      "id": "edit-preview",
      "excludePaths": [ "**spreadsheets**" ]
    },
    {
      "id": "preview-sheet",
      "title": "Preview Sheet",
      "event": "preview-sheet",
      "passConfig": true,
      "passReferrer": true,
      "url": "/tools/myPlugin/index.html",
      "excludePaths": [ "**" ],
      "includePaths": [ "**spreadsheets**" ]
    },
    {
      "id": "publish-channel",
      "title": "Publish Channel",
      "event": "publish-channel",
      "passConfig": true,
      "passReferrer": true,
      "environments": ["preview"]
    }
  ]
}
